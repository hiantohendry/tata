<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/jingga1</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="ToolBarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/primary_dark_material_dark</item>
        <item name="android:textColorSecondary">@color/primary_dark_material_dark</item>

        <item name="textAppearanceLargePopupMenu">@style/OverflowMenuStyle</item>
    </style>
    <style name="OverflowMenuStyle" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/primary_dark_material_dark</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>